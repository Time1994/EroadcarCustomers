<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/five">

    <ImageView
        android:id="@+id/store_iv"
        android:layout_width="@dimen/eighty"
        android:layout_height="@dimen/eighty"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ten"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="小李汽修"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sixteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pingf_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0分"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_fourteen" />

            <TextView
                android:id="@+id/order_tv"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="@dimen/fifteen"
                android:text="总订单:211单"
                android:textColor="@color/blacko"
                android:textSize="@dimen/text_twelve" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="12"
                android:singleLine="true"
                android:text="上海市浦东新区陈春路290号"
                android:textColor="@color/grayz"
                android:textSize="@dimen/text_twelve" />

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/fifteen"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="16KM"
                android:textColor="@color/blacko"
                android:textSize="@dimen/text_twelve" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/five">

            <TextView
                android:id="@+id/baoyan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_orange_k_select"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/five"
                android:paddingRight="@dimen/five"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:text="保养"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_twelve" />

            <!--<TextView-->
            <!--android:id="@+id/weixiu_tv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/five"-->
            <!--android:background="@drawable/btn_orange_k_select"-->
            <!--android:paddingBottom="2dp"-->
            <!--android:paddingLeft="@dimen/five"-->
            <!--android:paddingRight="@dimen/five"-->
            <!--android:paddingTop="2dp"-->
            <!--android:text="维修"-->
            <!--android:textColor="@color/orange"-->
            <!--android:textSize="@dimen/text_twelve" />-->
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
